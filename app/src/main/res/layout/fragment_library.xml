<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_library"
    tools:context="mokapos.com.shopping.fragments.LibraryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <include layout="@layout/frag_toolbar"
        android:id="@+id/toobar_item"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_itemlist"
        android:layout_below="@+id/toobar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:background="#FFFFFF"/>

    </LinearLayout>
</FrameLayout>
